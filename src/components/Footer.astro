---
import Trans from './Trans.astro'
import Signatures from './Signatures.svelte'
import useTranslation from '../locales/useTranslation'

const { isFrench } = useTranslation(Astro)
---

<footer>
	<div class='container'>
		<div id='legal'>
			<p>
				© 2019 <a href={isFrench() ? '/fr/' : '/'}>Bonjourr</a>
			</p>

			<p>
				<a href='privacy'>
					<small><Trans>Privacy policy</Trans></small>
				</a>
			</p>

			<p>
				<a href='https://github.com/morceaudebois/bonjourr.fr'>
					<small>
						<Trans>This website is on GitHub.</Trans>
					</small>
				</a>
			</p>
		</div>

		<div id='signature'>
			<p>
				<Trans>Made in France with ❤️</Trans>
			</p>

			<p>
				<Trans>by</Trans>
				<Signatures client:load />
			</p>
		</div>

		<div id='contact'>
			<p>
				<Trans>Contact us</Trans>
			</p>

			<p>
				<a href='https://t.me/BonjourrStartpage'>Telegram</a> ·
				<a href='mailto:bonjourr.app@protonmail.com'>email</a>
			</p>
		</div>
	</div>
</footer>

<style lang='scss'>
	footer {
		position: absolute;
		bottom: 0;
		width: 100%;
		background-color: #222a;
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		color: white;
		z-index: 2;
	}

	.container {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin: auto;
		padding: 2em;
		max-width: 1200px;
	}

	#signature {
		text-align: center;
	}

	#contact {
		text-align: right;
	}

	footer p {
		margin: 0;
	}

	footer a {
		font-weight: 500;
	}

	@media only screen and (max-width: 900px) {
		.container {
			display: grid;
			row-gap: 1em;
			grid-template-columns: 1fr 2fr;
		}

		#contact {
			text-align: left;
		}

		#signature {
			text-align: right;
			grid-column: 2;
			grid-row: 1 / 3;
		}
	}

	@media only screen and (max-width: 500px) {
		footer {
			position: inherit;
			background-color: #222;
		}

		.container {
			display: grid;
			row-gap: 2em;
			grid-template-columns: 1fr;
		}

		#signature {
			text-align: left;
			grid-column: 1;
			grid-row: 1;
		}
	}
</style>
