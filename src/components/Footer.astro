---
import Trans from './Trans.astro'
import Link from './Link.astro'
---

<script>
	window.onpageshow = () => {
		const signatures = document.getElementById('signature_span') as HTMLSpanElement
		const rowdir = Math.random() > 0.5 ? 'row-reverse' : 'row'
		signatures.style.setProperty('--dir', rowdir)
	}
</script>

<footer>
	<div class='container'>
		<div id='legal'>
			<p>© 2019 Bonjourr</p>

			<p>
				<Link href='/privacy'>
					<Trans>Privacy policy</Trans>
				</Link>
			</p>

			<br />

			<p>
				<a href='https://www.netlify.com'>
					<Trans>Website built with Netlify</Trans>
				</a>
			</p>
			<p>
				<a href='https://github.com/morceaudebois/bonjourr.fr'>
					<Trans>Source code</Trans>
				</a>
			</p>
		</div>

		<div id='signature'>
			<p>
				<Trans>Made in France with ❤️</Trans>
			</p>

			<p>
				<Trans>by</Trans>

				<span id='signature_span'>
					<a href='https://victr.me' title="Victor's portfolio">Victor Azevedo</a>
					 &
					<a href='https://tahoe.be' title="Tahoe's portfolio">Tahoe Beetschen</a>
				</span>
			</p>
		</div>

		<div id='contact'>
			<p>
				<Trans>Contact us</Trans>
			</p>

			<p>
				<a href='https://t.me/BonjourrStartpage'>Telegram</a> ·
				<a href='mailto:bonjourr.app@protonmail.com'>email</a>
			</p>
		</div>
	</div>
</footer>

<style>
	footer {
		width: 100%;
		min-height: 140px;
		font-size: 15px;
		color: #ccc;
		background-color: #1a1a1a;
		z-index: 2;
	}

	.container {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin: auto;
		padding: 2em 4em;
		max-width: 1200px;
	}

	#signature {
		text-align: center;
	}

	#signature_span {
		display: inline-flex;
		flex-direction: var(--dir);
		column-gap: 0.25em;
	}

	#contact {
		text-align: right;
	}

	footer p {
		margin: 0;
	}

	footer a {
		color: inherit;
	}

	footer a:hover {
		color: white;
		text-decoration: underline;
	}

	@media only screen and (max-width: 900px) {
		.container {
			display: grid;
			row-gap: 1em;
			grid-template-columns: 1fr 2fr;
			max-width: 700px;
		}

		#contact {
			text-align: left;
		}

		#signature {
			text-align: right;
			grid-column: 2;
			grid-row: 1 / 3;
		}
	}

	@media only screen and (max-width: 500px) {
		footer {
			position: inherit;
			background-color: #222;
		}

		.container {
			display: grid;
			row-gap: 2em;
			grid-template-columns: 1fr;
		}

		#signature {
			text-align: left;
			grid-column: 1;
			grid-row: 1;
		}
	}
</style>
