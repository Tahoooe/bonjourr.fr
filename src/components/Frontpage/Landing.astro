---
import Download from '../Download.svelte'
import Trans from '../Trans.astro'

import Illustration from '../../assets/illustration/illu.webp'
import Illustration2x from '../../assets/illustration/illu2x.webp'
---

<div class='left'>
	<div class='title'>
		<h1>Bonjourr</h1>
		<p><Trans>Startpage for your browser</Trans></p>
	</div>

	<Download client:load>
		<Trans slot='Download'>Download</Trans>
		<Trans slot='Online'>Try online</Trans>
	</Download>

	<div class='link'>
		<a href='/use-bonjourr'>
			<i>
				<Trans>Searching for other browsers?</Trans>
			</i>
		</a>
	</div>
</div>

<img src={Illustration} srcset={Illustration2x + ' 2x'} alt='Bonjourr screenshot' width='580' />

<style>
	h1,
	p {
		margin: 0;
	}

	.left {
		margin-right: 8vw;
	}

	.title {
		font-size: 2em;
		margin-bottom: 1.5em;
	}

	.title h1 {
		font-size: 2.5em;
		font-weight: 200;
	}

	.link {
		margin-top: 1em;
	}

	.link a {
		opacity: 0.8;
		transition: all 0.1s;
	}

	.link a:hover {
		opacity: 1;
		text-decoration: underline;
	}

	@media only screen and (max-width: 1300px) {
		img {
			width: 480px;
		}

		.title {
			font-size: 1.6em;
		}
	}

	@media only screen and (max-width: 1100px) {
		.left {
			text-align: center;
			margin-right: 0;
			margin-bottom: 4em;
		}

		.title {
			margin-bottom: 1em;
		}
	}

	@media only screen and (max-width: 580px) {
		.title {
			font-size: 1.4em;
		}

		img {
			width: 90%;
		}
	}
</style>
