<style lang='scss'>
	#hero {
		display: flex;
		position: relative;
		padding: 8em 4em;
		padding-top: 8em;
		justify-content: center;
		align-items: center;
		min-height: calc(90vh - 16em);
	}

	@media only screen and (max-width: 500px) {
		#hero {
			padding: 10em 2em;
			min-height: 400px;
		}
	}

	h2 {
		text-align: center;
		font-size: 35px;
		font-weight: 500;
		margin-bottom: 1.5em;
	}

	h3 {
		font-size: 2em;
		font-weight: 500;
		text-align: center;
	}

	section {
		padding: 4em;
	}

	.section-wrapper {
		margin: auto;
		max-width: 700px;
	}

	#open,
	#donate {
		position: relative;
		color: white;
		background-position: 50% 50%;
		background-size: cover;
	}

	#showcase {
		color: white;
		background: linear-gradient(0.25turn, #140a17, #231730, #140a17);
	}

	#open,
	#donate,
	#further {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 80vh;
	}

	#further {
		background-color: #fafafd;
	}

	#donate {
		padding-bottom: 10em;
	}

	#donate .buttons {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		width: 100%;
		column-gap: 1em;
		margin-top: 3em;
	}
</style>
