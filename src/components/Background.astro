---
const { blur, brightness } = Astro.props
---

<div>
	<img {...Astro.props} alt='' style={`filter: blur(${blur ?? 0}em) brightness(${brightness ?? 1})`} />
</div>

<style>
	img,
	div {
		position: absolute;
		user-select: none;
		pointer-events: none;
		touch-action: none;
		z-index: -1;
	}

	img {
		top: -2em;
		left: -2em;
		height: calc(100% + 4em);
		width: calc(100% + 4em);
		object-fit: cover;
	}

	div {
		top: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		background-color: #222;
	}
</style>
