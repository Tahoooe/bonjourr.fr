---
import useTranslation from '../../locales/useTranslation'

type Heading = {
    text: string
    slug: string
    depth: number
}

let { frontmatter } = Astro.props

const { isFrench } = useTranslation(Astro)
const postsEN = await Astro.glob('../../pages/docs/*.md')
const postsFR = await Astro.glob('../../pages/fr/docs/*.md')

// Choose which docs to use
let posts = (isFrench ? postsFR : postsEN).map((post) => ({
    frontmatter: post.frontmatter,
    headings: post.getHeadings(),
    url: post.url,
}))

// Sort by orderData
posts.sort((a, b) => {
    return a.frontmatter.orderData - b.frontmatter.orderData
})

// set current variable to not be confused with mapped frontmatter
const currentURL = frontmatter.url
---

<nav>
    <ul>
        {
            posts.map(({ url, frontmatter, headings }) => (
                <li>
                    <details open={currentURL === url && 'page'} aria-current={currentURL === url && 'page'}>
                        <summary>
                            <a href={url}>{frontmatter.title}</a>
                            <div class='summary-marker'>
                                <span>â®œ</span>
                            </div>
                        </summary>

                        <ul class='headings-list'>
                            {headings.map(
                                ({ text, slug, depth }: Heading) =>
                                    depth === 2 && (
                                        <li class={'headings-item item-' + slug}>
                                            <a href={url + '#' + slug}>{text}</a>
                                        </li>
                                    )
                            )}
                        </ul>
                    </details>
                </li>
            ))
        }
    </ul>
</nav>

<style lang='scss'>
    nav {
        min-width: 15em;
        font-size: 14px;
        line-height: 1.7em;
        list-style: outside;

        > ul {
            position: sticky;
            display: flex;
            top: 4em;
            gap: 1em;
            margin: 0 auto;
            padding: 3px;
            height: 100vh;
            max-width: 300px;
            max-height: calc(100vh - 8em);
            flex-direction: column;
            font-weight: 400;
            list-style: none;
            overflow-y: auto;
        }

        summary {
            cursor: pointer;
            user-select: none;
            list-style: none;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        summary a:hover {
            background-color: #fff1;
        }

        a {
            display: block;
            width: 100%;
            padding: 0.3em 1em;
            border: 1px solid transparent;
        }

        details .summary-marker {
            text-align: center;
            width: 4em;
            height: 1.8em;
            line-height: 1.8em;
            border-radius: 4px;
            border: 1px solid transparent;

            &:hover {
                border-color: #fff1;
                background-color: #fff1;
            }
        }

        details[open] .summary-marker span {
            display: inline-block;
            transform: rotate(-90deg);
        }

        ul.headings-list {
            font-weight: 200;
            list-style: none;
            padding-left: 0;

            li {
                &:hover,
                &[aria-current='true'] {
                    opacity: 1;
                    border-color: #fff1;
                    background-color: #fff1;
                }

                a {
                    opacity: 0.8;
                }
            }
        }

        > ul::-webkit-scrollbar {
            height: 4px;
            width: 4px;
            background: transparent;
        }

        > ul::-webkit-scrollbar-thumb {
            background: #555;
            border-radius: 2px;
        }

        > ul::-webkit-scrollbar-corner {
            background: transparent;
        }
    }

    @media only screen and (max-width: 700px) {
        nav > ul {
            height: auto;
        }
    }
</style>
