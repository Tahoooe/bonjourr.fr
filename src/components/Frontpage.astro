import Further from './Frontpage/Further.astro'
import Showcase from './Frontpage/Showcase.astro'
---

<section id='hero'>
	<Background src={LandingBackground} />
	<Landing />
</section>

<section id='showcase'>
	<Showcase />
</section>

<section id='open'>
	<div class='section-wrapper'>
