<style lang='scss'>
	@import '../styles/global.scss';

	#hero {
		display: flex;
		position: relative;
		padding: 4em;
		justify-content: center;
		align-items: center;
		min-height: calc(90vh - 8em);
	}

	@media only screen and (max-width: 500px) {
		#hero {
			padding: 6em 2em;
		}
	}

	h2 {
		text-align: center;
		font-size: 35px;
		font-weight: 500;
		margin-bottom: 1.5em;

		@include sm {
			font-size: 25px;
			margin-bottom: 1em;
			text-align: left;
		}
	}

	h3 {
		font-size: 2em;
		font-weight: 500;
		text-align: center;
	}

	section {
		@include sidePadding();

		padding: 4em;

		@include sm {
			padding-top: 3em;
			padding-bottom: 3em;
		}
	}

	.section-wrapper {
		margin: auto;
		max-width: 700px;
	}

	#open,
	#donate {
		color: white;
		background-position: 50% 50%;
		background-size: cover;
	}

	#open {
		background-image: url('../assets/mountains.webp');
	}

	#donate {
		background-image: url('../assets/greens.webp');
	}

	#showcase {
		color: white;
		background: linear-gradient(0.25turn, #140a17, #231730, #140a17);
	}

	#open,
	#donate,
	#further {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 80vh;
	}

	#further {
		background-color: #fafafd;
	}

	#donate {
		padding-bottom: 10em;
	}

	#donate .buttons {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		width: 100%;
		column-gap: 1em;
		margin-top: 3em;
	}
</style>
